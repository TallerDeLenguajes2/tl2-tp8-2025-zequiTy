<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MiWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MiWebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Menú Productos -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="productosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Productos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="productosDropdown">
                                <li><a class="dropdown-item" asp-controller="Productos" asp-action="Index">📋 Ver lista</a></li>
                                <li><a class="dropdown-item" asp-controller="Productos" asp-action="Details">🔎 Detalle</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Productos" asp-action="Create">➕ Insertar</a></li>
                                <li><a class="dropdown-item" asp-controller="Productos" asp-action="Edit">✏️ Actualizar</a></li>
                                <li><a class="dropdown-item" asp-controller="Productos" asp-action="Delete">🗑 Borrar</a></li>
                            </ul>
                        </li>

                        <!-- Menú Presupuesto -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="presupuestoDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Presupuestos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="presupuestoDropdown">
                                <li><a class="dropdown-item" asp-controller="Presupuesto" asp-action="Index">📋 Ver lista</a></li>
                                <li><a class="dropdown-item" asp-controller="Presupuesto" asp-action="Details">🔎 Detalle</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Presupuesto" asp-action="Create">➕ Insertar</a></li>
                                <li><a class="dropdown-item" asp-controller="Presupuesto" asp-action="Edit">✏️ Actualizar</a></li>
                                <li><a class="dropdown-item" asp-controller="Presupuesto" asp-action="Delete">🗑 Borrar</a></li>
                                <li><a class="dropdown-item" asp-controller="Presupuesto" asp-action="AgregarProducto">➕ Agregar Producto</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MiWebApp - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>